<div class="relative bg-white shadow">
  <div class="max-w-7xl mx-auto px-4 sm:px-6">
    <div class="flex justify-between items-center py-1 md:justify-start md:space-x-10">
      <div class="w-0 flex-1 flex">
        <!--        <a href="#" class="inline-flex">-->
        <%#= image_tag 'home/logo.png', class: 'h-14 w-auto sm:h-20', alt: 'Your App Name' %>
        <!--        </a>-->
      </div>
      <div class="-mr-2 -my-2">
        <div class="md:flex items-center justify-end space-x-8 md:flex-1 lg:w-0">
          <% if current_user.present? %>
            <a href="/sign_out" class="whitespace-no-wrap text-base leading-6 font-medium text-gray-500 hover:text-gray-900 transition ease-in-out duration-150">
              Sign Out
            </a>
          <% else %>
            <a href="/sign_in" class="whitespace-no-wrap text-base leading-6 font-medium text-gray-500 hover:text-gray-900 transition ease-in-out duration-150">
              Sign in
            </a>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
